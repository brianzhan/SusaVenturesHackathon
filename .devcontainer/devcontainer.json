{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.codespaces",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.pylint"
      ]
    },
    "codespaces": {
      "openFiles": ["app/page.tsx"]
    }
  },
  "forwardPorts": [3000],
  "updateContentCommand": "npm install && pip install -r equirements.txt"
}
